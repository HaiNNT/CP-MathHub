<div class="mh-home">
    <div class="row">
        @if (ViewData["Type"] == "home")
        {
            <div class="col-xs-12 col-md-7 mh-home-tab">
                <a href="@Url.Action("Index", new { @tab = "Home" })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Home" ? "active" : "")">
                    <i class="fa fa-home mh-home-button"></i>
                </a>
                <a href="@Url.Action("Index", new { @tab = "Feature" })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Feature" ? "active" : "")">Đặc sắc</a>
                <a href="@Url.Action("Index", new { @tab = "Recomended" })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Recomended" ? "active" : "")">Đề xuất</a>
                <a href="@Url.Action("Create")" class="btn btn-success btn-sm hidden-md hidden-lg">Tạo bài viết</a>
            </div>
            <div class="col-xs-12 col-md-5 mh-page-search">
                @using (Html.BeginForm("Search", "Blog", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="search" class="form-control" name="searchString" placeholder="Tìm kiếm..." value="@ViewBag.SearchString">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                }
            </div>
        }
        else if(ViewData["Type"] == "mine")
        {
            <div class="col-xs-12 col-md-8 mh-home-tab">
                <a href="@Url.Action("MyBlog", new { @tab = "Mine" })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Mine" ? "active" : "")">
                    <i class="fa fa-user mh-home-button"></i>
                </a>
                <a href="@Url.Action("MyBlog", new { @tab = "Subcribe" })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Subcribe" ? "active" : "")">Subscribe Blog</a>
                <a href="@Url.Action("MyBlog", new { @tab = "Bookmark" })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Bookmark" ? "active" : "")">Bài viết yêu thích</a>
                <a href="@Url.Action("MyBlog", new { @tab = "Friend" })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Friend" ? "active" : "")">Bài viết bạn bè</a>
                <a class="btn btn-success btn-sm hidden-md hidden-lg">Tạo bài viết</a>
            </div>
            <div class="col-xs-12 col-md-4 mh-page-search">
                @using (Html.BeginForm("Search", "Blog", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="search" class="form-control" name="searchString" placeholder="Tìm kiếm..." value="@ViewBag.SearchString">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="col-xs-12 col-md-8 mh-home-tab">
                <a href="@Url.Action("UserBlog", new { @tab = "Mine", @userId = ViewData["UserId"] })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Mine" ? "active" : "")">Bài viết của @ViewData["User"]</a>
                <a href="@Url.Action("UserBlog", new { @tab = "Subcribe", @userId = ViewData["UserId"] })" class="btn btn-primary btn-sm @(ViewBag.Tab == "Bookmark" ? "active" : "")">Bài viết yêu thích của @ViewData["User"]</a>
                <a class="btn btn-success btn-sm hidden-md hidden-lg">Tạo bài viết</a>
            </div>
            <div class="col-xs-12 col-md-4 mh-page-search">
                @using (Html.BeginForm("Search", "Blog", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="search" class="form-control" name="searchString" placeholder="Tìm kiếm..." value="@ViewBag.SearchString">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                }
            </div>
        }

    </div>
</div>
