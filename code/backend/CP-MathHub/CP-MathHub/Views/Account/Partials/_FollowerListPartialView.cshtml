@using CP_MathHub.Entity
@model List<User>

@foreach (User item in Model)
{
    <div class="media mh-profile-friend">
        <div class="media-left">
            <a href="#">
                <img class="mh-image-user-profile" src="~/Content/img/user-icon.png" alt="...">
            </a>
        </div>
        <div class="media-body">
            <h5 class="media-heading">@item.UserName</h5>
            <span>đang theo dõi bạn</span><br/>
            <button type="button" class="btn btn-default mh-profile-follow_unfollow-button">
                <i class="fa fa-rss"></i>
                Theo dõi
            </button>
        </div>
        <div class="media-right">
            <div class="btn-group">
                <a href="@Url.Action("CancelFriendInUserPage", new {targetUserId = item.Id, tab = "follower" })" class="btn btn-default">
                    <i class="fa fa-user-plus"></i>
                    Hủy kết bạn
                </a>
            </div>
        </div>
    </div>
}

