@model List<CP_MathHub.Entity.Comment>
@using CP_MathHub.Service.Helpers
<div class="panel-body mh-comment">
    <div class="mh-comment-detail">
        @for (int i = 0; i < Model.Count && i < 3; i++)
        {
            <div class="mh-comment-content">
                <span>@Model.ElementAt(i).Content</span><br />
                <a href="#">@Model.ElementAt(i).Author.Username</a>
                <span class="mh-time">@MhHtmlHelper.PostCreatedTime(Model.ElementAt(i).CreatedDate, "bình luận")</span>
            </div>
        }
        @if (Model.Count < 4)
        {
            <div>
                <input type="text" placeholder="Viết bình luận..." class="mh-form-input-comment">
            </div>
        }
        else
        {
            <a href="#">Xem thêm bình luận</a>
            for (int i = 3; i < Model.Count; i++)
            {
                <div class="mh-comment-content hidden">
                    <span>@Model.ElementAt(i).Content</span><br />
                    <a href="#">@Model.ElementAt(i).Author.Username</a>
                    <span class="mh-time">@MhHtmlHelper.PostCreatedTime(Model.ElementAt(i).CreatedDate, "bình luận")</span>
                </div>
            }
            <div class="hidden">
                <input type="text" placeholder="Viết bình luận..." class="mh-form-input-comment">
            </div>
        }
    </div>
</div>
