                                                        <img src="@(Model.Hints.ElementAt(i).Author.Avatar != null ? Url.Content(Model.Hints.ElementAt(i).Author.Avatar.Url) : Url.Content("~/Content/img/user.jpg"))" class="mh-user-avatar">
