@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @if (Request.IsAuthenticated)
    {
        <div class="hidden-xs col-sm-4 col-md-3 col-lg-2 mh-left-section">
            @RenderSection("LeftPanel", true)
        </div>
        <div class="col-xs-12 col-sm-8 col-md-6  col-lg-7 mh-mid-section" id="list-questions">
            @RenderBody()
        </div>
    }
    else
    {
        @RenderSection("LeftPanel", false)
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 mh-mid-section" id="list-questions">
            @RenderBody()
        </div>
    }

    <div class="hidden-xs hidden-sm col-md-3 col-lg-3 mh-right-section">
        @RenderSection("RightPanel", true)
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/questionjs")
    @RenderSection("scripts", false)
    <script>
            var id = $(".mh-hover-image").attr("mh-id");
            var userId = "#user-" + id;
            var idUser = "#idUser-" + id;
            $(".mh-user-info > " + userId).hover(function () { $(idUser).delay(500).fadeToggle() })
            $(idUser).hover(function () { $(idUser).fadeToggle() })  
    </script>
}
@section styles{
    <link href="~/Content/img/favicon.ico" rel="shorcut icon" type="image/x-icon" />
    <link rel="icon" href="~/Content/img/favicon.ico" type="image/x-icon">
    @Styles.Render("~/Content/question/css")
    @Styles.Render("~/Content/css")
    @RenderSection("styles", false)
}