@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="hidden-xs col-sm-4 col-md-3 col-lg-2 mh-left-section">
        @RenderSection("LeftPanel", true)
    </div>    
    <div class="col-xs-12 col-sm-8 col-md-9  col-lg-10 mh-mid-section" style="border-right: 0;">
        @RenderBody()
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/questionjs")
    @RenderSection("scripts", false)
}
@section styles{
    <link href="~/Content/img/favicon-blog.ico" rel="shorcut icon" type="image/x-icon" />
    <link rel="icon" href="~/Content/img/favicon-blog.ico" type="image/x-icon">
    @Styles.Render("~/Content/question/css")
    @RenderSection("styles", false)
}