@model CP_MathHub.Models.Question.QuestionEditViewModel
@{
    ViewBag.Title = "Chỉnh Sửa " + Model.Title;
    ViewBag.MhPage = "question-edit";
    Layout = "~/Views/Question/Layouts/_QuestionEditLayout.cshtml";
}

<h2>QuestionCreateView</h2>
@using (Html.BeginForm("Edit", "Question", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Title", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { @Value = Model.Title })
            @Html.ValidationMessageFor(model => model.Title)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Content", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Content, new { @Value = Model.Content })
            @Html.ValidationMessageFor(model => model.Content)
        </div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <button type="submit">Edit</button>
}
