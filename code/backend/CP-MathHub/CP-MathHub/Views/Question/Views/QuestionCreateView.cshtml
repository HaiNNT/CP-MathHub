@model CP_MathHub.Models.Question.QuestionCreateViewModel
@{
    ViewBag.Title = "QuestionCreateView";
    Layout = "~/Views/Question/Layouts/_QuestionCreateLayout.cshtml";
}

<h2>QuestionCreateView</h2>
@using (Html.BeginForm("Create", "Question", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Title", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Content", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Tag", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="hidden" value="1" name="TagIds" />
            <input type="hidden" value="2" name="TagIds" />
            <input type="hidden" value="3" name="TagIds" />
        </div>
    </div>
    <button type="submit">Create</button>
}
