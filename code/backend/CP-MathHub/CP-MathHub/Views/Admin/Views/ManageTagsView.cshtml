@using CP_MathHub.Entity
@using CP_MathHub.Models.Admin
@model ManageTagsViewModel
@{
    ViewBag.Title = "ManageTagsView";
    Layout = "~/Views/Admin/Layouts/_AdminLayout.cshtml";
}
<section class="wrapper">
    <!-- table: start -->
    <h3>Quản lý thẻ</h3>
    <section class="panel">
        <div class="panel-body">
            <div class="adv-table editable-table ">
                <div class="row clearfix">
                    <div class="col-xs-6 col-sm-3 col-md-2 btn-group">
                        <button id="editable-sample_new" class="btn btn-success" data-toggle="modal" data-target="#create">
                            Tạo thẻ mới <i class="icon-plus"></i>
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                @using (Html.BeginForm("InsertTag", "Admin", FormMethod.Post))
                                {
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Tạo thẻ mới</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row mh-admin-row">
                                                <div class="col-xs-3">
                                                    <label>Tên thẻ:</label>
                                                </div>
                                                <div class="col-xs-9">
                                                    @*<input type="text" placeholder="Nhập tên thẻ" class="mh-admin-row-input" />*@
                                                    @Html.TextBoxFor(m => m.Name, new { @class = "mh-admin-row-input", @placeholder = "Nhập tên thẻ" })
                                                </div>
                                            </div>
                                            <div class="row mh-admin-row">
                                                <div class="col-xs-3">
                                                    <label>Miêu tả:</label>
                                                </div>
                                                <div class="col-xs-9">
                                                    @*<input type="text" placeholder="Nhập miêu tả cho thẻ này" class="mh-admin-row-input" />*@
                                                    @Html.TextBoxFor(m => m.Description, new { @class = "mh-admin-row-input", @placeholder = "Nhập miêu tả cho thẻ này" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                            <button type="submit" class="btn btn-primary">Tạo mới</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="space15"></div>
                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên thẻ</th>
                            <th>Số lần dùng</th>
                            <th>Miêu tả</th>
                            <th>Kiểm tra trùng</th>
                            <th>Chỉnh sửa</th>
                            <th>Xóa</th>
                            <th><input type="checkbox" id="all-dup"></th>
                        </tr>
                    </thead>
                    <tbody id="mh-list-tag">
                        @Html.Partial("Partials/_ManageTagsPartialView", Model.Items)
                    </tbody>
                </table>
                <div class="space15"></div>
                <div class="mh-admin-tag-footer">
                    <button class="btn btn-default">Gộp thẻ trùng</button>
                    <button class="btn btn-info" data-toggle="modal" data-target="#checkDuplica-1">Gộp thẻ trùng</button>
                    <!-- Modal -->
                    <div class="modal fade" id="checkDuplica-1" tabindex=" -1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <form>
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Thay đổi quyền của <span class="mh-manage-user-username">Admin</span></h4>
                                    </div>
                                    <div class="modal-body">
                                        <section class="panel">
                                            <div class="panel-body">
                                                <div class="adv-table editable-table ">
                                                    <div class="space15"></div>
                                                    <table class="table table-striped table-hover table-bordered" id="editable-sample1">
                                                        <thead>
                                                            <tr>
                                                                <th>STT</th>
                                                                <th>Tên thẻ</th>
                                                                <th>Miêu tả</th>
                                                                <th><input type="checkbox" id="all"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @Html.Partial("Partials/_DuplicateTagsPartialView", Model.Items1)
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="row mh-admin-row-duplicate">
                                                    <div class="col-xs-3">
                                                        <label>Tên tag:</label>
                                                    </div>
                                                    <div class="col-xs-9">
                                                        <input type="text" class="mh-admin-row-input" />
                                                    </div>
                                                </div>
                                                <div class="row mh-admin-row-duplicate">
                                                    <div class="col-xs-3">
                                                        <label>Miêu tả:</label>
                                                    </div>
                                                    <div class="col-xs-9">
                                                        <input type="text" class="mh-admin-row-input" />
                                                    </div>
                                                </div>
                                                <div class="mh-admin-duplicate-footer">
                                                    <button type="button" class="btn btn-danger">Gộp thẻ</button>
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                        <button type="button" class="btn btn-primary">Lưu thay đổi</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- table: end -->
</section>
<input id="mh-page" type="hidden" value="@ViewBag.Page" />