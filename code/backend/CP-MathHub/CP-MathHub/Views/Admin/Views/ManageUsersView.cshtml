@model CP_MathHub.Models.Admin.ManageUsersViewModel
@using CP_MathHub.Core.Configuration
@using CP_MathHub.Entity
@using CP_MathHub.Service.Helpers
@{
    ViewBag.Title = "ManageUsersView";
    Layout = "~/Views/Admin/Layouts/_AdminLayout.cshtml";
}

<section class="wrapper">
    <h3>Quản lý người dùng</h3>
    <!--state overview start-->
    <div class="row state-overview">
        <div class="col-lg-3 col-sm-6">
            <a href="#">
                <section class="panel">
                    <div class="symbol green">
                        <i class="fa fa-user-plus"></i>
                    </div>
                    <div class="value">
                        <h1 class="count">@Model.NewUserNumber</h1>
                        <p>Người dùng mới</p>
                    </div>
                </section>
            </a>
        </div>
        <div class="col-lg-3 col-sm-6">
            <a href="#">
                <section class="panel">
                    <div class="symbol blue">
                        <i class="icon-group"></i>
                    </div>
                    <div class="value">
                        <h1 class="count">@Model.UserNumber</h1>
                        <p>Người dùng</p>
                    </div>
                </section>
            </a>
        </div>
    </div>
    <!--state overview end-->
    <!-- table: start -->
    <section class="panel">
        <div class="panel-body">
            <div class="adv-table editable-table ">
                <div class="row">
                    <div class="col-xs-4 cols-sm-2 col-md-2 col-lg-2">
                        <h4>Hiển thị: </h4>
                    </div>
                    <div class="col-xs-8 cols-sm-10 col-md-10 col-lg-10">
                        <select name="selValue" class="selectpicker" multiple="multiple" title="Không có gì được chọn">
                            <option value="1">Tất cả mọi người</option>
                            <option value="2">Quản lý</option>
                            <option value="3">Người dùng</option>
                        </select>
                    </div>
                </div>
                <div class="space15"></div>
                <table class="table table-striped table-hover table-bordered" id="editable-manageUser">
                    <thead>
                        <tr>
                            <th>Ảnh đại diện</th>
                            <th>Tài khoản</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Trạng thái</th>
                            <th>Từng bị khóa</th>
                            <th>Chức vụ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (User user in Model.Users)
                        {
                            <tr class="">
                                <td class="mh-cell-center">
                                    <img src="@(user.Avatar != null ? Url.Content(user.Avatar.Url) : Url.Content("~/Content/img/user.jpg"))" class="mh-user-picture" />
                                </td>
                                <td class="mh-cell-center">
                                    <a data-toggle="modal" data-target="#user-@user.Id">@user.UserName</a>
                                    <!-- Modal -->
                                    <div class="modal fade" id="user-@user.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">Thông tin của <span class="mh-manage-user-username">@user.UserName</span></h4>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>
                                                        Đi đến
                                                        <a href="#">trang thông tin cá nhân</a>
                                                        của
                                                        <span class="mh-manage-user-username">@user.UserName</span>
                                                    </h4>
                                                    <div>
                                                        <h3>Thông tin chung</h3>
                                                        <div class="mh-manage-user-info-detail">
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Tài khoản</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.UserName</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Email</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.Email</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Điểm thưởng</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <div>
                                                                        <span>@user.Reputation</span>
                                                                        <i class="icon-circle mh-reputation-icon"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <h3>Thông tin cơ bản</h3>
                                                        <div class="mh-manage-user-info-detail">
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Họ tên</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.Profile.FullName</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Giới tính</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@(user.Profile.Gender != null ? Constant.Account.Dictionary.GenderName[(int)user.Profile.Gender] : "")</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Ngày sinh</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@(user.Profile.Birthday != null ? user.Profile.Birthday.Value.ToString("dd-MM-yyyy") : "")</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <h3>Thông tin liên hệ</h3>
                                                        <div class="mh-manage-user-info-detail">
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Địa chỉ</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.Profile.Address</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Số điện thoại</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.PhoneNumber</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Facebook</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <a href="@user.Profile.Facebook">@user.Profile.Facebook</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <h3>Thông tin khác</h3>
                                                        <div class="mh-manage-user-info-detail">
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Trường</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.Profile.School</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Trình độ</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@(user.Profile.Education != null ? Constant.Account.Dictionary.EducationName[(int)user.Profile.Education] : "")</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Quan điểm</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.Profile.ViewPoint</span>
                                                                </div>
                                                            </div>
                                                            <div class="row mh-profile-info-row">
                                                                <div class="col-xs-3">
                                                                    <label>Giới thiệu</label>
                                                                </div>
                                                                <div class="col-xs-5">
                                                                    <span>@user.Profile.Summary</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="mh-cell-middle">@user.Profile.FullName</td>
                                <td class="mh-cell-middle">@user.Email</td>
                                <td class="mh-cell-center">@Html.CheckStatusUser(user.Status)</td>
                                <td class="mh-cell-center">
                                    @{
                                        if (user.BannedAccounts.Count > 0)
                                        {
                                             <a data-toggle="modal" data-target="#blocked-@user.Id">@user.BanAccounts.Count lần</a>
                                        }
                                        else
                                        {
                                            <span>Chưa</span>
                                        }
                                    }
                                    <!-- Modal -->
                                    <div class="modal fade" id="blocked-@user.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">Lịch sử bị khóa</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="mh-history-block-row">
                                                        <h3>Lần 1:</h3>
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Lý do:</h5>
                                                            </div>
                                                            <div class="col-xs-8 mh-select-cause-time-block">
                                                                <select name="selBlock" class="selectpicker" multiple="multiple" title="Không có lý do nào được chọn">
                                                                    <option value="1">ABC - 1 ngày</option>
                                                                    <option value="2">XYZ - 2 ngày</option>
                                                                    <option value="3">LMG - 3 ngày</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Tổng số ngày bị khóa</h5>
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <input type="text" readonly value="" class="mh-sum-day-block-input" />
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Bị khóa bởi</h5>
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <h5>Quản lý - ABC</h5>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*@(user.BannedAccounts.Count > 0 ? user.BannedAccounts.Count+" lần" : "chưa")*@
                                </td>
                                <td class="mh-cell-center">
                                    @Html.GetRoleUser(user.Assessments.ToList())
                                    @*@(Html.GetRoleUser(user.Assessments.ElementAt(0).RoleId))*@
                                </td>
                                <td class="mh-cell-center">
                                    @{
                                        if (@Html.CheckStatusUser(user.Status) == "Bị khóa")
                                        {
                                            <a href="" type="button" class="btn btn-warning" data-toggle="modal" data-target="#unblockuser-@user.Id">Bỏ khóa</a>
                                        }
                                        else
                                        {
                                            <a href="" type="button" class="btn btn-warning" data-toggle="modal" data-target="#blockuser-@user.Id">Khóa</a>
                                        }
                                    }  
                                    <a class="delete btn btn-danger" href="javascript:;" type="button">Xóa</a>
                                    <a href="" type="button" class="btn btn-primary" data-toggle="modal" data-target="#setRole-@user.Id">Phân quyền</a>
                                    <!-- Modal -->
                                    <div class="modal fade" id="blockuser-@user.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <form>
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                        <h4 class="modal-title" id="myModalLabel">Khóa tài khoản: <span class="mh-manage-user-username">@user.UserName</span></h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Lý do:</h5>
                                                            </div>
                                                            <div class="col-xs-8 mh-select-cause-time-block">
                                                                <select name="selBlock" class="selectpicker blockday" multiple="multiple" title="Không có lý do nào được chọn">
                                                                    <option value="1">ABC - 1 ngày</option>
                                                                    <option value="2">XYZ - 2 ngày</option>
                                                                    <option value="3">LMG - 3 ngày</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Tổng số ngày bị khóa</h5>
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <input id="dayresult-1" type="text" readonly value="" class="mh-sum-day-block-input" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                                        <button type="button" class="btn btn-warning">Khóa</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Modal -->
                                    <div class="modal fade" id="unblockuser-@user.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <form>
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                        <h4 class="modal-title" id="myModalLabel">Bỏ khóa tài khoản: <span class="mh-manage-user-username">@user.UserName</span></h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Lý do:</h5>
                                                            </div>
                                                            <div class="col-xs-8 mh-select-cause-time-block">
                                                                <select name="selBlock" class="selectpicker" multiple="multiple" title="Không có lý do nào được chọn">
                                                                    <option value="1">ABC - 1 ngày</option>
                                                                    <option value="2">XYZ - 2 ngày</option>
                                                                    <option value="3">LMG - 3 ngày</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Tổng số ngày bị khóa</h5>
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <input type="text" readonly value="" class="mh-sum-day-block-input" />
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Số ngày bị khóa còn lại</h5>
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <input type="text" readonly value="" class="mh-sum-day-block-input" />
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-xs-4">
                                                                <h5>Bị khóa bởi</h5>
                                                            </div>
                                                            <div class="col-xs-8">
                                                                <h5>Quản lý - ABC</h5>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                                        <button type="button" class="btn btn-warning">Bỏ khóa</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Modal -->
                                    <div class="modal fade" id="setRole-@user.Id" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                                        <div class="modal-dialog modal-sm" role="document">
                                            <div class="modal-content">
                                                <form>
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                        <h4 class="modal-title" id="myModalLabel">Phân quyền cho <span class="mh-manage-user-username">@user.UserName</span></h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <label>
                                                            <input type="checkbox" value="3" @(Html.GetRoleUser(user.Assessments.ToList()).Contains("Quản lý") ? "checked" : "")>
                                                            Quản lý
                                                        </label><br />
                                                        <label>
                                                            <input type="checkbox" value="2" @(Html.GetRoleUser(user.Assessments.ToList()).Contains("Chuyên gia") ? "checked" : "")>
                                                            Chuyên gia
                                                        </label><br />
                                                        <label>
                                                            <input type="checkbox" value="1" @(Html.GetRoleUser(user.Assessments.ToList()).Contains("Người dùng") ? "checked" : "")>
                                                            Người dùng
                                                        </label>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                                        <button type="button" class="btn btn-primary">Lưu thay đổi</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <!-- table: end -->
</section>

<input id="mh-page" type="hidden" value="@ViewBag.Page" />


