@using CP_MathHub.Models.Admin
@model ICollection<RuleViewModel>
@for (int i = 0; i < Model.Count; i++ )
{
    RuleViewModel rule = Model.ElementAt(i);
    <tr class="">
        <td class="mh-cell-center">@(i+1)</td>
        <td class="mh-cell-center">@rule.Name</td>
        <td class="mh-cell-middle">@rule.Description</td>
        <td class="mh-cell-middle">
            <div><span>@rule.Duration</span> ngày</div>
        </td>
        <td class="mh-cell-center"><a class="edit btn btn-primary" href="javascript:;" mh-id="@rule.Id">Chỉnh sửa</a></td>
        @*<td class="mh-cell-center"><a class="delete btn btn-danger" href="javascript:;">Xóa</a></td>*@
    </tr>
}



