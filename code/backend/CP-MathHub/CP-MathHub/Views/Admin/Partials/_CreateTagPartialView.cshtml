@using CP_MathHub.Models.Admin
@model CreateTagViewModel
@using (Html.BeginForm("InsertTag", "Admin", FormMethod.Post, new { role = "form"}))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Tạo thẻ mới</h4>
        </div>
        <div class="modal-body">
            <div class="row mh-admin-row">
                <div class="col-xs-3">
                    <label>Tên thẻ:</label>
                </div>
                <div class="col-xs-9">
                    @*<input type="text" placeholder="Nhập tên thẻ" class="mh-admin-row-input" />*@
                    @Html.TextBoxFor(m => m.Name, new { @class = "mh-admin-row-input", @placeholder = "Nhập tên thẻ" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mh-admin-row">
                <div class="col-xs-3">
                    <label>Miêu tả:</label>
                </div>
                <div class="col-xs-9">
                    @*<input type="text" placeholder="Nhập miêu tả cho thẻ này" class="mh-admin-row-input" />*@
                    @Html.TextBoxFor(m => m.Description, new { @class = "mh-admin-row-input", @placeholder = "Nhập miêu tả cho thẻ này" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-primary">Tạo mới</button>
        </div>
    </div>
}
